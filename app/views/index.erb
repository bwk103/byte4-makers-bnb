<div class='form_box'>
  <form action='/signup' method='post'>
    <label>
      Email:<br>
      <input name='email' type='email' required>
    </label>
    <br>
    <label>
      Password:<br>
      <input name='password' type='password' required>
    </label>
    <br>
    <label>
      Confirm Password:<br>
      <input name='password_confirmation' type='password' required>
    </label>
    <br>
    <input type='submit' value='Sign Up'>
  </form>
</div>
