<h1>Hello MakersBnB!</h1>

<h3>Spaces</h3>

<%if current_user %>
  <form action='/spaces/new'>
  <input type='submit' value='List New Space'>
  </form>
<% end %>

<ul id="spaces">
  <% @spaces.each do |space| %>
    <li>
      Title: <%= space.title %><br />
      Description: <%= space.description %></br>
      Price per Night: <%= space.price %></br>

      Available from <%= space.start_date.strftime("%d/%m/%Y") %> to <%= space.end_date.strftime("%d/%m/%Y") %>
      <br>
      Picture of a place: <img src='http://lorempixel.com/output/nature-q-c-640-480-<%= space.id % 10 %>.jpg'>
      <br>
      Tags: <ul>
      <% @tags.each do |tag| %>
        <% if tag.space_id == space.id and tag.name %>
          <li> <%= tag.name %> </li>
        <% end %>
      <% end %>
    </ul>

      <% if current_user %>
        <% if space.user_id != current_user.id %>
          <a href="/spaces/<%=space.id%>">Book</a>
        <% else %>
          <p> This is your space! </p>
        <% end %>
      <% end %>

    </li>
  <% end %>
</ul>
